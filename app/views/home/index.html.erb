<div class="container-fluid py-5">
  <div class="row align-items-center gx-5" style="min-height: 80vh;">
    <div class="col-lg-5 col-md-6 col-sm-12 pe-lg-5">
      <h1 class="mb-3 fw-bold display-4" style="white-space: nowrap;">Find your dream Job</h1>
      <p class="fs-5 mb-1">Find your dream job or post a job opening</p>
      <p class="fs-5">Explore thousands of job listings and connect with top employers</p>
    </div>
    <div class="col-lg-7 col-md-6 col-sm-12 text-end">
      <img src="landing-page.png" alt="Job Portal Banner" class="img-fluid banner-img" style="max-width: 100%; object-fit: contain;" />
    </div>
  </div>
</div>



<div class="row mb-4 mt-5">
  <div class="col-12">
    <h2>Latest Job Opportunities</h2>
  </div>
</div>

<div class="row">
  <% if @recent_jobs.present? %>
    <% @recent_jobs.each do |job| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card job-card-light h-100 shadow-card animate-fade-in">
          <div class="card-body">
            <h5 class="card-title mb-2"><%= job.title %></h5>
            <h6 class="card-subtitle mb-3" style="font-weight:500;"><%= job.company_name %> &bull; <%= job.location %></h6>
            <p class="card-text" style="min-height:60px;"><%= truncate(job.description, length: 100) %></p>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <span class="badge"><%= job.employment_type %></span>
              <% if job.salary.present? %>
                <span class="job-salary"><%= number_to_currency(job.salary) %></span>
              <% end %>
            </div>
          </div>
          <div class="card-footer d-flex gap-2">
            <%= link_to "View Details", job_path(job), class: "btn btn-outline-primary btn-sm flex-fill" %>
            <% if user_signed_in? && current_user.job_seeker? %>
              <%= link_to "Apply Now", new_job_application_path(job), class: "btn btn-primary btn-sm flex-fill" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <div class="alert alert-info">
        No jobs available at the moment. Please check back later.
      </div>
    </div>
  <% end %>
</div>


<div class="text-center mt-4 mb-5">
  <%= link_to "View All Jobs", jobs_path, class: "btn btn-outline-primary" %>
</div>

<hr class="my-5">

<div class="row mb-5 feature-cards">
  <div class="col-md-4 mb-3">
    <div class="card h-100 border-0 shadow-sm feature-card">
      <div class="card-body text-center">
        <div class="icon-circle search-icon mb-4">
          <i class="bi bi-search fs-3"></i>
        </div>
        <h3 class="feature-title">Search Jobs</h3>
        <p class="feature-text">Browse through thousands of opportunities from top companies.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-3">
    <div class="card h-100 border-0 shadow-sm feature-card">
      <div class="card-body text-center">
        <div class="icon-circle apply-icon mb-4">
          <i class="bi bi-file-earmark-text fs-3"></i>
        </div>
        <h3 class="feature-title">Apply Easily</h3>
        <p class="feature-text">Quick application process with personalized cover letters.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-3">
    <div class="card h-100 border-0 shadow-sm feature-card">
      <div class="card-body text-center">
        <div class="icon-circle track-icon mb-4">
          <i class="bi bi-graph-up fs-3"></i>
        </div>
        <h3 class="feature-title">Track Progress</h3>
        <p class="feature-text">Monitor your applications and get updates from employers.</p>
      </div>
    </div>
  </div>
</div>