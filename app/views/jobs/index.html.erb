<div class="row mb-4 align-items-center">
  <div class="col-md-8">
    <h1>All Job Listings</h1>
  </div>
  <div class="col-md-4 text-md-end">
    <% if user_signed_in? && current_user.recruiter? %>
      <%= link_to "Post New Job", new_job_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <form class="row g-3">
          <div class="col-md-4">
            <label for="keyword" class="form-label">Keywords</label>
            <input type="text" class="form-control" id="keyword" placeholder="Job title, skills, etc.">
          </div>
          <div class="col-md-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" placeholder="City, state or remote">
          </div>
          <div class="col-md-3">
            <label for="type" class="form-label">Employment Type</label>
            <select class="form-select" id="type">
              <option selected value="">All Types</option>
              <option>Full-time</option>
              <option>Part-time</option>
              <option>Contract</option>
              <option>Internship</option>
            </select>
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <% if @jobs.present? %>
    <% @jobs.each do |job| %>
      <div class="col-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="row">
              <div class="col-md-8">
                <h3 class="card-title mb-1"><%= link_to job.title, job_path(job), class: "text-decoration-none" %></h3>
                <h6 class="card-subtitle mb-2 text-muted">
                  <%= job.company_name %> â€¢ <%= job.location %>
                </h6>
                <p class="card-text mb-2"><%= truncate(job.description, length: 150) %></p>
                <div class="mb-2">
                  <span class="badge bg-info me-2"><%= job.employment_type %></span>
                  <% if job.salary.present? %>
                    <span class="badge bg-success"><%= number_to_currency(job.salary) %></span>
                  <% end %>
                </div>
                <small class="text-muted">Posted <%= time_ago_in_words(job.created_at) %> ago by <%= job.user.email %></small>
              </div>
              <div class="col-md-4 text-md-end d-flex flex-column justify-content-between">
                <div class="mt-3 mt-md-0">
                  <%= link_to "View Details", job_path(job), class: "btn btn-outline-primary me-2" %>
                  <% if user_signed_in? && current_user.job_seeker? %>
                    <%= link_to "Apply Now", new_job_application_path(job), class: "btn btn-primary" %>
                  <% end %>
                </div>
                
                <% if user_signed_in? && current_user == job.user %>
                  <div class="mt-3">
                    <%= link_to "Edit", edit_job_path(job), class: "btn btn-sm btn-outline-secondary me-2" %>
                    <%= button_to "Delete", job_path(job), method: :delete, class: "btn btn-sm btn-outline-danger", 
                        form: { data: { turbo_confirm: "Are you sure? This cannot be undone." } }, style: "display: inline-block;" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <div class="alert alert-info">
        No jobs found matching your criteria.
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%# Pagination will go here if you implement it %>
</div>